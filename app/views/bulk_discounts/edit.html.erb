<h4>Edit Bulk Discount #<%= @bulk_discount.id %> for <%= @merchant.name %> </h4>

<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
<%= f.label :percent %>
<%= f.number_field :percent, value: @bulk_discount.percent%>

<%= f.label :quantity %>
<%= f.number_field :quantity, value: @bulk_discount.quantity %>

<%= f.submit "SAVE" %>
<% end %>
